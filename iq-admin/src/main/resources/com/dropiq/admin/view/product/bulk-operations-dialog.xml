<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bulkOperationsTitle">
    <layout>
        <vbox padding="true" spacing="true" width="100%">
            <h2 text="msg://bulkOperationsTitle"/>

            <formLayout>
                <comboBox id="operationTypeField"
                          label="msg://operationType"
                          required="true"
                          width="100%"/>
                <bigDecimalField id="markupPercentageField"
                                 label="msg://markupPercentage"
                                 width="200px"
                                 visible="false"/>
                <textField id="categoryField"
                           label="msg://categoryName"
                           width="100%"
                           visible="false"/>
            </formLayout>

            <details summaryText="msg://operationDetails" opened="false">
                <span id="operationDescription"
                      text="msg://selectOperationFirst"
                      css="color: var(--lumo-secondary-text-color); font-style: italic;"/>
            </details>

            <hbox spacing="true" alignItems="END">
                <button id="executeButton"
                        text="msg://execute"
                        icon="PLAY"
                        themeNames="primary"/>
                <button id="cancelButton"
                        text="msg://cancel"
                        themeNames="tertiary"/>
            </hbox>
        </vbox>
    </layout>
</view>