<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://DashboardView.title">
    <layout>
        <vbox id="mainContent" width="100%" height="100%">
            <hbox id="headerLayout" width="100%" alignItems="CENTER" padding="true">
                <h1 text="msg://dashboard.title"/>
                <button id="refreshButton" text="msg://refresh" icon="REFRESH"
                        themeNames="primary"/>
            </hbox>

            <hbox id="statsLayout" width="100%" spacing="true" padding="true">
                <!-- Stats cards will be added programmatically -->
            </hbox>

            <hbox id="contentLayout" width="100%" height="100%" spacing="true" padding="true">
                <vbox id="chartsLayout" width="60%" height="100%" spacing="true">
                    <!-- Charts will be added programmatically -->
                </vbox>

                <vbox id="recentActivityLayout" width="40%" height="100%" spacing="true">
                    <!-- Recent activity will be added programmatically -->
                </vbox>
            </hbox>
        </vbox>
    </layout>
</view>