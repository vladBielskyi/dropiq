<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://DataSourceListView.title"
      focusComponent="dataSourcesDataGrid">
    <data>
        <collection id="dataSourcesDc"
                    class="com.dropiq.admin.entity.DataSource">
            <fetchPlan extends="_base">
                <property name="sourceType"/>
                <property name="status"/>
                <property name="lastSync"/>
                <property name="totalProducts"/>
                <property name="activeProducts"/>
            </fetchPlan>
            <loader id="dataSourcesDl" readOnly="true">
                <query>
                    <![CDATA[select ds from DataSource ds order by ds.createdAt desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter" dataLoader="dataSourcesDl">
            <properties include="name,sourceType,status"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="dataSourcesDataGrid.createAction"/>
            <button id="editButton" action="dataSourcesDataGrid.editAction"/>
            <button id="removeButton" action="dataSourcesDataGrid.removeAction"/>
            <button id="syncButton" action="dataSourcesDataGrid.syncAction"/>
            <button id="testConnectionButton" action="dataSourcesDataGrid.testConnectionAction"/>
            <simplePagination id="pagination" dataLoader="dataSourcesDl"/>
        </hbox>
        <dataGrid id="dataSourcesDataGrid"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em"
                  dataContainer="dataSourcesDc">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
                <action id="syncAction" text="msg://syncAction" icon="REFRESH"/>
                <action id="testConnectionAction" text="msg://testConnectionAction" icon="CONNECT"/>
            </actions>
            <columns resizable="true">
                <column property="name" width="200px"/>
                <column property="sourceType" width="150px"/>
                <column property="status" width="100px"/>
                <column property="totalProducts" width="120px" header="msg://totalProducts"/>
                <column property="activeProducts" width="120px" header="msg://activeProducts"/>
                <column property="lastSync" width="150px"/>
                <column property="autoSync" width="100px"/>
                <column property="createdAt" width="150px"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>