<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://dataSetListView.title"
      focusComponent="dataSetsDataGrid">
    <data>
        <collection id="dataSetsDc"
                    class="com.dropiq.admin.entity.DataSet">
            <fetchPlan extends="_base"/>
            <loader id="dataSetsDl" readOnly="true">
                <query>
                    <![CDATA[select e from DataSet e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="dataSetsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="dataSetsDataGrid.createAction"/>
            <button id="editButton" action="dataSetsDataGrid.editAction"/>
            <button id="removeButton" action="dataSetsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="dataSetsDl"/>
        </hbox>
        <dataGrid id="dataSetsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="dataSetsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="description"/>
                <column property="status"/>
                <column property="createdBy"/>
                <column property="createdAt"/>
                <column property="updatedAt"/>
                <column property="lastSync"/>
                <column property="autoSync"/>
                <column property="syncIntervalHours"/>
                <column property="defaultMarkup"/>
                <column property="minProfitMargin"/>
                <column property="autoPriceUpdate"/>
                <column property="autoStockUpdate"/>
                <column property="aiOptimizationEnabled"/>
                <column property="seoOptimizationEnabled"/>
                <column property="trendAnalysisEnabled"/>
                <column property="totalProducts"/>
                <column property="activeProducts"/>
                <column property="syncCount"/>
                <column property="errorCount"/>
                <column property="lastErrorMessage"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
