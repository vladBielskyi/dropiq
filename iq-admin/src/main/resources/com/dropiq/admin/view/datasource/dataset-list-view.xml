<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://DatasetListView.title"
      focusComponent="datasetsDataGrid">
    <data>
        <collection id="datasetsDc"
                    class="com.dropiq.admin.entity.Dataset">
            <fetchPlan extends="_base">
                <property name="dataSource" fetchPlan="_base"/>
                <property name="status"/>
                <property name="totalProducts"/>
                <property name="activeProducts"/>
                <property name="optimizedProducts"/>
                <property name="lastSync"/>
            </fetchPlan>
            <loader id="datasetsDl" readOnly="true">
                <query>
                    <![CDATA[select d from Dataset d order by d.createdAt desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter" dataLoader="datasetsDl">
            <properties include="name,status,dataSource"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="datasetsDataGrid.createAction"/>
            <button id="editButton" action="datasetsDataGrid.editAction"/>
            <button id="removeButton" action="datasetsDataGrid.removeAction"/>
            <button id="syncButton" action="datasetsDataGrid.syncAction"/>
            <button id="optimizeButton" action="datasetsDataGrid.optimizeAction"/>
            <button id="exportButton" action="datasetsDataGrid.exportAction"/>
            <simplePagination id="pagination" dataLoader="datasetsDl"/>
        </hbox>
        <dataGrid id="datasetsDataGrid"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em"
                  dataContainer="datasetsDc">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
                <action id="syncAction" text="msg://syncAction" icon="REFRESH"/>
                <action id="optimizeAction" text="msg://optimizeAction" icon="MAGIC"/>
                <action id="exportAction" text="msg://exportAction" icon="UPLOAD"/>
            </actions>
            <columns resizable="true">
                <column property="name" width="200px"/>
                <column property="dataSource.name" width="150px" header="msg://dataSource"/>
                <column property="status" width="120px"/>
                <column property="totalProducts" width="100px" header="msg://totalProducts"/>
                <column property="activeProducts" width="100px" header="msg://activeProducts"/>
                <column property="optimizedProducts" width="100px" header="msg://optimizedProducts"/>
                <column property="defaultMarkup" width="100px" header="msg://defaultMarkup"/>
                <column property="lastSync" width="150px"/>
                <column property="createdAt" width="150px"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>